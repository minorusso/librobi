<h2>検索結果</h2>
<div id='book_list'>
    <% if @books.present? %>
        <% @books.each do |book| %>
            <div class="list">
            <%= link_to (image_tag(book.image_url)), book.url %><br>
            <%= link_to "レビュー投稿", new_post_path %><br>
            <%= book.title %><br>
            <%= book.author %><br>
            <%= book.item_caption %><br>   
            </div>
        <% end %>
    <% end %>
</div>
