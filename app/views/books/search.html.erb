<h1>Books#search</h1>
<h2>検索結果</h2>
<div id='book_list'>
    <% if @books.present? %>
        <% @books.each do |book| %>
            <div class="list">
                <%= link_to (image_tag(book.image_url)), book.url %><br>
                <%= link_to "レビュー投稿", new_post_path %><br>
                    <%= form_tag(books_search_path) do %>
                    <%= hidden_field_tag :isbn, book.isbn %>
                    <%= submit_tag 'save' %>
                    <% end %>
                <%= book.title %><br>
                <%= book.author %><br>
                <%= book.item_caption %><br>   
                <%= book.isbn %><br> 
            </div>
        <% end %>
    <% end %>
</div>
