<% if post.favorited_by?(current_user) %>
    <%= link_to post_favorites_path(post_id: post.id, book_id: post.book.id), method: :delete, remote: true, class: "favorite_btn" do %>
    ♥<%= post.favorites.count %> いいね
    <% end %>
<% else %>
    <%= link_to post_favorites_path(post_id: post.id, book_id: post.book.id), method: :post, remote: true, class: "favorite_btn" do %>
    ♡<%= post.favorites.count %> いいね
    <% end %>
<% end %>