<!DOCTYPE html>
<html>
  <head>
    <title>Librobi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>  
      <% if user_signed_in? %>
        <div><%= link_to "トップ", root_path, class: "text-black" %></div>
        <div><%= link_to "投稿一覧", posts_path, class: "text-black" %></div>
        <div><%= link_to "ユーザー", users_path, class: "text-black" %></div>
        <div><%= link_to "マイページ", user_path(current_user.id), class: "text-black" %></div>
        <div><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "text-black" %></div>
      <% else %>
        <div><%= link_to "新規登録", new_user_registration_path, class: "text-black" %></div>
        <div><%= link_to "ログイン", new_user_session_path, class: "text-black" %></div>
      <% end %>
    </header> 
    <div id="notices"> 
      <% if notice %>
        <p class="alert alert-notice"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-error"><%= alert %></p>
      <% end %> 
    </div>
    <div id="search-box">
      <% if user_signed_in? %> 
        <%= form_tag(search_books_path, method: :get) do %>
          <%= text_field_tag :title, @title, placeholder:"タイトルを入力してください。", class: "form-control" %>
          <%= button_tag "検索", class: "form-control btn btn-success" %>
        <% end %>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
