<h1>レビュー編集</h1>
<%= link_to (image_tag(@book.image_url)), @book.url %><br>
<%= @book.title %><br>
<%= @book.author %><br>
<%= @book.item_caption %><br>   
<%= @book.isbn %><br> 
<div class="row justify-content-center">
<%= form_with(model: @post, local: true) do |form| %>
    <div class="post_review">
        <%= form.hidden_field :book_id, :value => @book.id %>
        <%= form.label :review %>
        <%= form.text_field :review %>
    </div>
    <div class="form-group row" id="star">
        <%= form.label :rate,'評価 ', class:'col-md-3 col-form-label' %>
        <%= form.hidden_field :rate, id: :review_star %>
    </div>
    <!-- 評価javascript -->
    <script>
    $('#star').raty({
        size     : 36,
        starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',
        scoreName: '[rate]',
        half: true,
    });
    </script>  
    <%= form.submit %>
<% end %>
</div>
<%= link_to "一覧", posts_path %>
<%= link_to "詳細", post_path(id: @post.id, book_id: @post.book.id ) %>
<%= link_to '削除する', post_path(@post.id),method: :delete, "data-confirm"=>"本当に消しますか？" %><br>