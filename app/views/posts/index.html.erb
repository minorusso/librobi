<div class="cover-index">
    <div class="container">
        <div class="row justify-content-center">
            <h1 class="font-weight-normal mt-5 mb-5">投稿一覧</h1>
        </div>
        <div class="row justify-content-left">
            <% @posts.each do |post| %>
            <div class="one-post">
                <td><%= link_to (image_tag(post.book.image_url)), post.book.url %></td>
                <td><%= post.book.title %></td><br>
                <td><%= attachment_image_tag post.user, :profile_image, :fill, 60, 60 %></td>
                <td><%= post.user.name %></td>
                <th>レビュー</th>
                <!--星評価-->
                <div id="star-rate-<%= post.id %>"></div>
                <script>
                $('#star-rate-<%= post.id %>').raty({
                    size: 36,
                    starOff:  '<%= asset_path('star-off.png') %>',
                    starOn : '<%= asset_path('star-on.png') %>',
                    starHalf: '<%= asset_path('star-half.png') %>',
                    half: true,
                    readOnly: true,
                    score: <%= post.rate %>,
                });
                </script>  
                <!--/星評価-->
                <td><%= post.review %></td><br>
                <th>コメント数</th>
                <td><%= "#{post.comments.count} コメント" %></td>
                <td><%= link_to "詳細", post_path(id: post.id, book_id: post.book.id ) %></td>
            </div>
            <% end %>
        </div>
        <%= paginate @posts %>
    </div>
</div>
