<h1>レビュー編集</h1>
<%= link_to (image_tag(@book.image_url)), @book.url %><br>
<%= @book.title %><br>
<%= @book.author %><br>
<%= @book.item_caption %><br>   
<%= @book.isbn %><br> 

<%= form_with(model: Post.new, local: true) do |form| %>
<div class="post_review">
    <%= form.label :review %>
    <%= form.text_field :review %>
</div>
<%= form.submit %>
<% end %>

<%= form_tag(books_search_path) do %>
    <%= hidden_field_tag :isbn, book.isbn %>
    <%= submit_tag '詳細' %>
<% end %>