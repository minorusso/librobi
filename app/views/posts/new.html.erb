<h1>レビュー作成</h1>
<%= link_to (image_tag(@book.image_url)), @book.url %><br>
<%= @book.title %><br>
<%= @book.author %><br>
<%= @book.item_caption %><br>   
<%= @book.isbn %><br> 

<%= form_with(model: @post, local: true) do |form| %>
<div class="post_review">
    <%= form.hidden_field :isbn, value:@book.isbn %>
    <%= form.label :review %>
    <%= form.text_field :review %>
</div>
<%= form.submit %>
<% end %>
