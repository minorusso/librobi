
<div class="row justify-content-center">
    <h1 class="font-weight-normal mt-5 mb-5">プロフィール編集</h1>
</div>

<div class="row justify-content-center">
    <div class="text-center">
        <div class="box2">
            <div class="box-inner">
            <%= form_with model: @user, local:true do |f| %>
                <div class="form-group">
                    <label class="form-label">名前</label>
                    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control" %>
                </div>
                <div class="form-group">
                    <label class="form-label">プロフィール画像</label><br>
                    <%= attachment_image_tag @user, :profile_image, size: '100x100', fallback: "no_profile_image.png", class: "mb-3 profile-img" %><br>
                    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
                </div>
                <div class="form-group">
                    <label class="form-label">プロフィール</label>
                    <%= f.text_field :profile, class: "form-control" %><br>
                </div>
                <%= f.submit '保存する', class: "btn btn-success" %>
            <% end %>
                <div class="box-newusr">
                    <p><span>------------</span> Email・パスワード・アカウント削除 <span>------------</span></p>
                    <%= link_to "ユーザー情報", edit_user_registration_path, class: "btn btn-primary" %><br>
                </div>
            </div>
        </div>
    </div>
</div>
