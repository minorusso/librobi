<div class="cover-user-index">
    <div class="container">
        <div class="row justify-content-center">
        <h1 class="font-weight-normal mt-5 mb-5">ユーザー一覧</h1>
        </div>
        <div class="row justify-content-end mb-3">
            <%= form_with url: users_path, method: :get, local: true do |f| %>
                <%= f.text_field :search %>
                <%= f.submit '検索する', name: nil %>
            <% end %>
        </div>
        <div class="row justify-content-center">
        <% @users.each do |user| %>
        <div class="one-post card w-100">
            <%= link_to user_path(user) do %>
            <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg' %><br>
            <p class="caption h4"><%= user.name %></p>
            <p class="caption"><%= "#{user.posts.count} 投稿" %></p>
            <% end %>
        </div>
        <% end %>
        </div>
        <%= paginate @users %>
    </div>
</div>