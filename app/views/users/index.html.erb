<div class="cover-user-index">
    <div class="container">
        <div class="row justify-content-center">
        <h1 class="font-weight-normal mt-5 mb-5">ユーザー一覧</h1>
        </div>
        <div class="row justify-content-end mb-3">
            <%= form_with url: users_path, method: :get, local: true do |f| %>
                <%= f.text_field :search %>
                <%= f.submit '検索する', name: nil %>
            <% end %>
        </div>
        <%= render 'form', users: @users, user: @user %>
    </div>
</div>